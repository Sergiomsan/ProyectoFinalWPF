<Window x:Class="ProyectoFinal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoFinal"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" TextWrapping="Wrap" Text="Bienvenido al hotel!!!!" Width="286" FontSize="29"/>
        <TextBlock HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="Indica la tabla con la que deseas operar" VerticalAlignment="Center" Width="443" FontSize="25"/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Cliente" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="21" Click="botonCliente"/>
            <Button Content="Reserva" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="21" Click="botonReserva"/>
            <Button Content="Habitacion" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="21" Click="botonHabitacion"/>
        </Grid>
        
    </Grid>
</Window>
